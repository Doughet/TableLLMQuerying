# Include the README and license
include README_STANDALONE.md
include README.md
include LICENSE

# Include configuration files
include requirements.txt
include setup.py
include .gitignore

# Include examples
recursive-include examples *.html *.json
include examples/sample_table.html
include examples/config_*.json

# Include Python files
include *.py
recursive-include . *.py

# Include documentation
include *.md
recursive-include . *.md *.txt

# Exclude test outputs and cache
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.db
global-exclude *.sqlite*
global-exclude *_outputs/
global-exclude __pycache__
global-exclude .pytest_cache
global-exclude .coverage
recursive-exclude . __pycache__
recursive-exclude . *.py[co]